<head>
  <meta charset="UTF-8" />
  <title>Message Detail</title>
  <link rel="stylesheet" href="/css/style.css" />
</head>

<%- include("header") %>

<main>
    <div class="content">
        <h1>Message</h1>
        
        <% if (message === null) { %>
          <p>Message not found</p>
        <% } else if (message) { %>
          <p><strong><%= message.user %></strong></p>
          <p><%= message.text %></p>
          <p><%= message.added %></p>
        <% } else { %>
          <p>No message selected</p>
        <% } %>
        <a href="/"><p class="navLink">Back</p></a>
    </div>
</main>
